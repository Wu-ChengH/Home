.publicInfo{
	width:100%;
	height: 100%;
	text-align: center;
}
.publicInfo .info_pub_first{
	width:calc(100% - 30px);
	display: inline-block;
	height: calc(50% - 15px);
	border-radius: 5px;
	box-shadow: 0px 1px 8px #111111;
	margin-top: 10px;
	position: relative;
	text-align: left;
	overflow: hidden;
	background-color: white;
}
.publicInfo .info_pub_first .item_title{
	height: 30px;
	width:100%;
	line-height: 28px;
	text-indent: 8px;
	border-top:1px solid #CCCCCC;
	border-bottom:1px solid #CCCCCC;
	background-image: url('../img/dialog_title.png');
	background-repeat: repeat-x;
}
.publicInfo .info_pub_first .chart_layout{
	width:calc(100% - 280px);
	display: inline-block;
	height: calc(100% - 30px);
}
.publicInfo .info_pub_first .infor_layout{
	width:200px;
	position: absolute;
	height: calc(100% - 70px);
	top:50px;
	right: 40px;
	border:1px solid red;
	border-radius: 4px;
	text-align: center;
}
.publicInfo .info_pub_first .infor_layout .info_span{
	display: block;
    margin-top: 20%;
    font-size: 24px;
}
.publicInfo .info_pub_first .infor_layout .info_time{
	font-size: 48px;
    color: red;
    margin-top: 15%;
    display: inline-block;
}