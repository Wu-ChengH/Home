.allPublic{
	height: 100%;
}
.allPublic #all_pub_container{
	height: 100%;
}
.allPublic .left_container{
	height: calc(100% - 20px);
	border-radius: 5px;
	box-shadow: 0px 1px 8px #111111;
	width:500px;
	position: absolute;
	top:10px;
	right:10px;
	overflow: hidden;
}
.allPublic .left_container .item_title{
	height: 30px;
	width:100%;
	line-height: 28px;
	text-indent: 8px;
	border-top:1px solid #CCCCCC;
	border-bottom:1px solid #CCCCCC;
	background-image: url('../img/dialog_title.png');
	background-repeat: repeat-x;
}
.allPublic .left_container .layout_item{
	height: 33%;
	width: 100%;
	background-color: white;
}
.allPublic .left_container .item_container{
	height: calc(100% - 30px);
	width: 100%;
}